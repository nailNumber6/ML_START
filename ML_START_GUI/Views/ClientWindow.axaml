<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:MLSTART_GUI.ViewModels"
        mc:Ignorable="d" Width="400" Height="400"
        x:Class="MLSTART_GUI.Views.ClientWindow"
		x:DataType="vm:ClientWindowViewModel"
		Name="clientWindow"
        Title="Client"
		Background="AliceBlue">

	<Window.DataContext>
		<vm:ClientWindowViewModel/>
	</Window.DataContext>
	
	<StackPanel>
		
		<Label Name="username"/>
		<Button Content="Подключиться"
				Command="{Binding ConnectServerCommand}"/>
		<Button Content="Отключиться"
				Command="{Binding CloseConnectionCommand}"/>
		
		<Label Content="{Binding Ip}"/>
		<Label Content="{Binding Port}"/>
		
		<TextBlock Text="{Binding ResultMessage}" Foreground="Red"/>
		
	</StackPanel>
	
</Window>
